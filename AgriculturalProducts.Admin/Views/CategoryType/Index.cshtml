
@{
    ViewData["Title"]="Product";
    Layout="~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/provider.css" rel="stylesheet" />
}
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Danh mục, loại sản phẩm</h4>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-6 p-0 m-0">
                                    <div class="col-12 d-flex no-block align-items-center">
                                        <h4 class="page-title">Danh mục sản phẩm</h4>
                                        <div class="ml-auto text-right">
                                            <nav aria-label="breadcrumb">
                                                <div class="card-body pb-1">
                                                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target=".bd-category-manager-modal-lg">Thêm</button>
                                                    <button type="button" class="btn btn-primary btn-sm">Thêm từ file Excel</button>
                                                    <button type="button" class="btn btn-primary btn-sm">Xóa toàn bộ</button>
                                                </div>
                                            </nav>
                                        </div>
                                    </div>
                                    <div class="card-body pt-0 pb-1 pr-0">
                                        <div class="col-lg-12 pt-1 float-right pb-1 pr-0">
                                            <div class="row float-right">
                                                <input type="text" class="form-control search-category float-right text-search mr-2" placeholder="Nhập tên hoặc mã nhà cung cấp">
                                                <button type="button" class="mr-3 btn btn-info btn-sm pt-0 pb-0 btn-search-infor-category">Tìm kiếm</button>
                                            </div>
                                        </div>
                                    </div>
                                    <table id="zero_config" class="table table-striped table-bordered category">
                                        <thead>
                                            <tr>
                                                <th>Mã danh mục</th>
                                                <th>Tên danh mục</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                    <div>
                                        <div class="p-l-0 float-left">
                                            <span class="float-left pr-1">Trang</span> <input type="text" class="float-left form-control page-number-category text-pagin" value="1" placeholder="1">  <span class="pl-1">trên</span> <span class="total-pages pr-1"></span>
                                        </div>
                                        <div class="p-l-0 float-left">
                                            <input type="text" class="form-control page-size-category text-pagin" value="10" placeholder="col-md-1">
                                        </div>
                                        <div class="p-l-0 float-left">
                                            <button type="button" class="ml-2 mr-3 btn btn-info btn-sm pt-0 pb-0 btn-get-data-category">Lấy dữ liệu</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="col-12 d-flex no-block align-items-center">
                                        <h4 class="page-title">Loại sản phẩm</h4>
                                        <div class="ml-auto text-right">
                                            <nav aria-label="breadcrumb">
                                                <div class="card-body pb-1">
                                                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target=".bd-product-type-modal-lg">Thêm</button>
                                                    <button type="button" class="btn btn-primary btn-sm">Thêm từ file Excel</button>
                                                    <button type="button" class="btn btn-primary btn-sm">Xóa toàn bộ</button>
                                                </div>
                                            </nav>
                                        </div>
                                    </div>
                                    <div class="card-body pt-0 pb-1 pr-0">
                                        <div class="col-lg-12 pt-1 float-right pb-1 pr-0">
                                            <div class="row float-right">
                                                <input type="text" class="form-control search-produt-type float-right text-search mr-2" placeholder="Nhập tên hoặc mã nhà cung cấp">
                                                <button type="button" class="mr-3 btn btn-info btn-sm pt-0 pb-0 btn-search-infor-product-type">Tìm kiếm</button>
                                            </div>
                                        </div>
                                    </div>
                                    <table id="zero_config" class="table table-striped table-bordered product-type">
                                        <thead>
                                            <tr>
                                                <th>Mã loại sản phẩm</th>
                                                <th>Tên loại sản phẩm</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                    <div>
                                        <div class="p-l-0 float-left">
                                            <span class="float-left pr-1">Trang</span> <input type="text" class="float-left form-control page-number-produt-type text-pagin" value="1" placeholder="1">  <span class="pl-1">trên</span> <span class="total-pages pr-1"></span>
                                        </div>
                                        <div class="p-l-0 float-left">
                                            <input type="text" class="form-control page-size-produt-type text-pagin" value="10" placeholder="col-md-1">
                                        </div>
                                        <div class="p-l-0 float-left">
                                            <button type="button" class="ml-2 mr-3 btn btn-info btn-sm pt-0 pb-0 btn-get-data-produt-type">Lấy dữ liệu</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Right sidebar -->
    <!-- ============================================================== -->
    <!-- .right-sidebar -->
    <!-- ============================================================== -->
    <!-- End Right sidebar -->
    <!-- ============================================================== -->
</div>
@Html.Partial("_CategoryPartial")
@Html.Partial("_ProductTypePartial")
<!-- ============================================================== -->
<!-- End Container fluid  -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- footer -->
<!-- ============================================================== -->
@section Scripts{
    <script src="~/js/ProductType.js"></script>
    <script src="~/js/Category.js"></script>
}
<!-- ============================================================== -->
<!-- End footer -->
<!-- ============================================================== -->