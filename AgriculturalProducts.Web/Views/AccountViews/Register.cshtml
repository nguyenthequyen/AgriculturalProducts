
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="register">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="commontop text-left">
                </div>
                <p>Tạo tài khoản</p>
                <div>
                    <div class="form-group">
                        <label>Tên đăng nhập *</label>
                        <input type="text" name="username" value="" placeholder="John Doe" id="input-username" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Họ đệm *</label>
                        <input type="text" name="mail" value="" placeholder="Họ đệm" id="input-lastname" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Tên *</label>
                        <input type="text" name="mail" value="" placeholder="Họ đệm" id="input-firstname" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Email *</label>
                        <input type="text" name="mail" value="" placeholder="Your Email" id="input-mail" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Ngày sinh *</label>
                        <input type="text" name="mail" value="" placeholder="Your Phone" id="input-BirthDay" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Giới tính *</label>
                        <input type="text" name="mail" value="" placeholder="Your Phone" id="input-gender" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Địa chỉ *</label>
                        <input type="text" name="mail" value="" placeholder="Your Phone" id="input-address" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu *</label>
                        <input type="text" name="password" value="" placeholder="Password" id="input-password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Xác nhận mật khẩu*</label>
                        <input type="text" name="confirmpassword" value="" placeholder="Password" id="input-confirmpassword" class="form-control" />
                    </div>
                    <button class="btn btn-primary btn-register">Đăng ký</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/dist/jquery.min.js"></script>
<script src="~/js/views/Common.js"></script>
<script src="~/js/views/Account.js"></script>